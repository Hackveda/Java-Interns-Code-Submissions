//nestedwhile

package com.ayush;


public class Practice {

	public static void main(String[] args) 
	{
		// demo nested while 
		int i=1, j=1;
		while (i<= 10)
		{
			while (j<= 5)
			{
				System.out.print("*");
				j++;
			}
			i++;
			System.out.println("");
			j=1;
		}
		
	}

}
             
