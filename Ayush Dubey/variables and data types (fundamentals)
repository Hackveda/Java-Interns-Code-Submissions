// data types 

package com.ayush;


public class Practice {

	public static void main(String[] args) 
	{
	//primitive data types
	
	byte age = 19;
	int phone = 9823788888;
	long no2 = 1234888888888800009L
	float = 3.14F
	char letter = '@';
	boolean isAdult = false;
	
	//non-primitive data type
	
	String name = "Ayush";
	System.out.println(name.length());
	
	}

}

